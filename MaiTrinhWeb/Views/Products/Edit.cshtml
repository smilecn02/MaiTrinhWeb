@model MaiTrinhWeb.Data.Product

@{
    ViewBag.Title = "Chỉnh sửa";
}

<h2>Chỉnh sửa sản phẩm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
